/* =======================================================
   侧边栏菜单样式
   ======================================================== */
#menu-mask {
  position: fixed;
  z-index: 102;
  display: none;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.8); /* 确保透明背景 */
}

#sidebar-menus {
  position: fixed;
  top: 0;
  right: -300px; /* 默认隐藏，右侧滑出 */
  z-index: 103;
  overflow-x: hidden;
  overflow-y: auto; /* 允许竖向滚动 */
  padding-left: 5px;
  width: 300px; /* 侧边栏宽度 */
  height: 100%;
  background: var(--sidebar-bg);
  transition: all 0.5s ease;
}

/* 打开时侧边栏 */
#sidebar-menus.open {
  transform: translateX(0); /* 展开时从右侧滑入 */
}

/* 侧边栏头像样式 */
#sidebar-menus > .avatar-img {
  margin: 20px auto;
}

.site-data {
  padding: 0 10px;
}

hr {
  margin: 20px auto;
}

/* =======================================================
   菜单项样式
   ======================================================== */
.menus_items {
  margin: 20px;
  padding: 15px;
  background: var(--sidebar-menu-bg);
  box-shadow: 0 0 1px 1px rgba(7, 17, 27, 0.05);
  border-radius: 10px;
}

.site-page {
  position: relative;
  display: block;
  margin: 4px 0;
  padding: 2px 23px 2px 15px;
  color: var(--font-color);
  font-size: 1.15em;
  cursor: pointer;
  border-radius: 6px;
}

.site-page:hover {
  background: var(--text-bg-hover);
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  color: var(--white);
  transition: all 0.2s ease;
  transform: translateX(3px);
}

.site-page i:first-child {
  width: 15%;
  text-align: left;
}

.site-page.group {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* 子菜单的显示与折叠 */
.site-page.group > i:last-child {
  position: absolute;
  top: 0.6em;
  right: 10px;
  transition: transform 0.3s ease;
}

.site-page.group.hide > i:last-child {
  transform: rotate(90deg);
}

/* 子菜单项 */
.menus_item_child {
  display: block; /* 竖向排列 */
  margin: 0;
  padding-left: 25px;
  max-height: 0;
  opacity: 0;
  list-style: none;
  transition: transform 0.3s ease, opacity 0.3s ease, max-height 0.3s ease;
  transform-origin: top;
  will-change: transform, opacity, max-height;

  /* 替代 transform: scaleY(0) */
  max-height: 0;
  opacity: 0;
}

/* 展开时显示子菜单 */
.site-page.group:not(.hide) + .menus_item_child {
  max-height: 1000px;
  opacity: 1;
  transform: scaleY(1); /* 保持竖向排列 */
}

/* =======================================================
   手机端适配（小于768px）
   ======================================================== */
@media (max-width: 768px) {
  /* 侧边栏在手机端显示 */
  #sidebar-menus {
    width: 100%; /* 侧边栏宽度为全屏 */
    right: 0; /* 定位到右侧 */
    overflow-y: auto; /* 启用滚动 */
    transition: all 0.5s ease; /* 保持动画过渡 */
  }

  /* 菜单项和子菜单项竖向排列 */
  .menus_items {
    display: block; /* 强制菜单项垂直排列 */
    font-size: 1rem !important; /* 调整字体大小适配屏幕 */
    padding-left: 0;
    padding-right: 0;
  }

  .menus_item {
    width: 100%; /* 子菜单项宽度为100% */
    margin: 10px 0; /* 增加间距 */
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  #search-button {
    text-align: center; /* 搜索按钮居中 */
    width: 100%; /* 全宽显示 */
    font-size: 1rem !important;
  }

  /* 调整菜单图标 */
  .menus_item i {
    width: 20px;
  }

  /* 手机端子菜单竖向排列 */
  .menus_item_child li {
    float: none; /* 移除浮动，使子菜单项竖向排列 */
    border-radius: 6px;
    margin: 5px 0;
  }
}
